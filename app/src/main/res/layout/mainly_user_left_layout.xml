<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5.1dp"
				android:orientation="horizontal">

	<RelativeLayout
		android:id="@+id/userly_icon_ly"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/userly_icon_bg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:src="@drawable/touxiangmoren"/>

		<ImageView
			android:id="@+id/userly_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"/>

		<ImageView
			android:id="@+id/userly_audio_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:visibility="invisible"
			android:src="@drawable/xiao"/>
	</RelativeLayout>

	<TextView
		android:id="@+id/userly_count"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/user_count"
		android:gravity="center"
		android:text="10"
		android:textColor="#FFFFFF"
		android:textSize="6sp"
		android:visibility="invisible"/>

	<TextView
		android:id="@+id/userly_local_user_name"
		android:layout_width="wrap_content"
		android:visibility="gone"
		android:layout_height="wrap_content"
		android:layout_alignRight="@+id/userly_icon_ly"
		android:layout_alignBottom="@+id/userly_icon_ly"
		android:textColor="#ffffff"
		android:textSize="10sp"
		android:text="æˆ‘"
		android:layout_marginRight="2dp"
		android:layout_marginBottom="2dp"
		android:gravity="center"
		android:singleLine="true"/>

	<TextView
		android:id="@+id/userly_user_id"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/userly_icon_ly"
		android:layout_alignRight="@+id/userly_icon_ly"
		android:layout_below="@+id/userly_icon_ly"
		android:gravity="center"
		android:singleLine="true"
		android:textColor="#ffffff"
		android:textSize="10sp"/>
</RelativeLayout>